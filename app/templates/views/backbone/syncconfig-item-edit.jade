script#template-syncconfig-item-edit-view(type="text/template").
  div.span1
  div.span6
    label Input bugzilla link
    input(value=queryUrl).js-query-url
    div.js-alert.alert.hide  Loading...
  div.span5
    label Put bugs in List
    a.js-specify-list New List
    select.js-list-name
      each list, i in lists
        if list.id === listId._id
          option(value=list.id, selected="selected")= list.name
        else
          option(value=list.id)= list.name
    input(placeholder="Input New List Name").hide.js-list-name
  div.mapping-submit
    button.btn.btn-primary.js-syncconfig-save Save
    button.btn.js-syncconfig-cancel Cancel
